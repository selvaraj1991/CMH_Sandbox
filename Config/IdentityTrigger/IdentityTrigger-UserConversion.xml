<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE IdentityTrigger PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<IdentityTrigger handler="sailpoint.api.WorkflowTriggerHandler" name="User Conversion" type="Rule">
  <Description>Conversion between Employee and Non Employee and Vice - Versa</Description>
  <Owner>
    <Reference class="sailpoint.object.Identity" name="spadmin"/>
  </Owner>
  <HandlerParameters>
    <Attributes>
      <Map>
        <entry key="workflow" value="CMH-LifecycleEvent-User-Conversion"/>
      </Map>
    </Attributes>
  </HandlerParameters>
  <TriggerRule>
    <Reference class="sailpoint.object.Rule" name="CMH-User-Conversion-Trigger-Rule"/>
  </TriggerRule>
</IdentityTrigger>
