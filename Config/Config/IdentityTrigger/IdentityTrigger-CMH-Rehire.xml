<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE IdentityTrigger PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<IdentityTrigger handler="sailpoint.api.WorkflowTriggerHandler" name="Rehire" type="Rule">
    <Owner>
        <Reference class="sailpoint.object.Identity" name="spadmin"/>
    </Owner>
    <HandlerParameters>
        <Attributes>
            <Map>
                <entry key="workflow" value="CMH-LifecycleEvent-Rehire"/>
            </Map>
        </Attributes>
    </HandlerParameters>
    <TriggerRule>
        <Reference class="sailpoint.object.Rule" name="CMH-Rehire-Users-Trigger-Rule"/>
    </TriggerRule>
</IdentityTrigger>
